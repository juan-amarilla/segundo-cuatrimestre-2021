#include <stdio.h>
#include <stdlib.h>

int main(void) {

    int numero;
    int aux;
    int i;
    int promedio;

    for(i=0;i<5;i++)
    {
    	printf("Ingrese un numero: \n");
    	fflush(stdout);
    	scanf("%d", &numero);
        aux += numero;
        printf("el auxiliar es %d \n", aux);

    }

    promedio = aux / i;

    printf("El promedio es %d", promedio);

	return 0;
}
