#include <stdio.h>
#include <stdlib.h>

int main(void) {

    int numeroUno;
    int numeroDos;
    int numeroTres;
    int numeroCuatro;
    int numeroCinco;
    int suma;
    int promedio;

    printf("Ingrese el primer numero: \n ");
    fflush(stdout);
    scanf("%f", &numeroUno);

    printf("Ingrese el segundo numero: \n ");
    fflush(stdout);
    scanf("%f", &numeroDos);

    printf("Ingrese el tercer numero: \n ");
    fflush(stdout);
    scanf("%f", &numeroTres);

    printf("Ingrese el cuarto numero: \n ");
    fflush(stdout);
    scanf("%f", &numeroTres);

    printf("Ingrese el quinto numero: \n ");
    fflush(stdout);
    scanf("%f", &numeroTres);

    promedio = suma / 5;

    printf("El promedio es %d", promedio);

	return 0;
}
