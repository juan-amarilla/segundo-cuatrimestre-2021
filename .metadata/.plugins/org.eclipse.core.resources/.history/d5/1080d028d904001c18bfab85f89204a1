#include <stdio.h>
#include <stdlib.h>

int main(void) {

    int i;
    float numero;
    float promedio;
    float suma;

    suma=0;

    for(i=0;i<5;i++)
    {
    	printf("Ingrese un numero: \n");
    	fflush(stdout);
    	scanf("%f", &numero);
    	suma += numero;

    }

    promedio = suma / i;

    printf("El promedio es %.2f", promedio);

	return 0;
}
